<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/performer.css">
<title id="title"></title>
</head>

<body>
    <%- include('includes/navbar.ejs') %>
    <nav class="crumb" aria-label="breadcrumb">
        <ol class="breadcrumb crumb">
            <li class="breadcrumb-item" aria-current="page"><a class="bc-item" href="#">Home</a></li>
            <li class="breadcrumb-item" aria-current="page"><a class="bc-item" href="#">Performers</a></li>
            <li id="name" class="breadcrumb-item bc-active" aria-current="page"></li>
        </ol>
    </nav>

    <div id="main-container" class="container">
        <div class="row">
            <div class="col"></div>
            <div class="col-10 col-md-8 col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-center">
                            <div class="photo-container">
                                <img src="/images/HarryPotter.jpg" class="performer-img">
                            </div>
                            <div class="header-container">
                                <div class="d-flex justify-content-center">
                                    <h2 id="name2" class="title"></h2>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <h4 class="subtitle">-Performer-</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p><span class="font-weight-bold">Age:</span><span class="font-weight-light">
                                53</span></p>
                        <p><span class="font-weight-bold">Born in:</span><span class="font-weight-light">
                                Yate, England</span></p>
                        <p><span class="font-weight-bold">Genres:</span><span class="font-weight-light">
                                Fantasy, Horror</span></p>
                        <p><span class="font-weight-bold">Main Series:</span><span class="font-weight-light">
                                Harry Potter</span></p>
                    </div>
                    <hr>
                    <p id="followName" class="centralized subtitle">Follow J.K.Rowling on social media!</p>
                    <ul class="social-network centralized">
                        <li><a href="#" class="icoFacebook"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="#" class="icoTwitter"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="#" class="icoInstagram"><i class="fab fa-instagram"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="col"></div>
        </div>

        <div class="s-wrapper centralized">
            <div id="quote-wrapper">
                <div class="quote"><i class="fa fa-quote-left fa-4x"></i></div>
                <blockquote>
                    <p class="subtitle">La mia ragazza mi piace come il caff√®:</p>
                    <p class="subtitle">Senza il cazzo di qualcun altro dentro</p>
                </blockquote>
            </div>

            <div id="slider-container" class="container">
                <div id="slider" class="carousel slide">
                    <ol class="carousel-indicators">
                        <li data-target="#slider" data-slide-to="0" class="active"></li>
                        <li data-target="#slider" data-slide-to="1"></li>
                        <li data-target="#slider" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/chicago.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/la.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/ny.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#slider" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#slider" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col"></div>
            <div class="col-8">
                <div class="description-wrapper centralized">
                    <h2 id="moreAbout" class="title"></h2>
                    <p id="description">                    
                    </p>
                </div>
            </div>
            <div class="col"></div>
        </div>

        <div class="row">
            <div class="col"></div>
            <div class="col-12">
                <div class="centralized event-wrapper">
                    <h2 id="findAuthor" class="title"></h2>
                    <div id="" class="row d-flex justify-content-center">
                        <div id="eventsContainer" class="event-box">
                        </div>                        
                    </div>
                </div>
            </div>
            <div class="col"></div>
        </div>
    </div>

    <%- include('includes/footer.ejs') %>
    <script src="/js/script.js"></script>
    <script src="/js/performer.js"></script>
</body>

</html>