<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/login.css">
    <title>Registration Page</title>
</head>

<body>
    <%- include('includes/navbar.ejs') %>

    <nav class="crumb" aria-label="breadcrumb">
        <ol class="breadcrumb crumb">
            <li class="breadcrumb-item bc-active" aria-current="page">Home</li>
        </ol>
    </nav>

    <div class="container" style="padding-top: 40px; padding-bottom: 20px; margin-bottom: 45px;">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header black-card">
                    <h3><span class="wheat-item">Register</span></h3>
                </div>
                <div class="card-body grey-card">
                    <form>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                </div>
                                <input id="emailText" type="text" class="form-control" placeholder="e-mail">

                            </div>
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input id="passText" type="password" class="form-control" placeholder="password">

                        </div>
                        <div class="form-group">
                            <input id="registerBtn" type="button" value="Register" class="btn float-right card-item">
                        </div>

                        <div class="form-group">
                            <p id="statusText" type="" value="dsadsa" class="text-warning">fdsfs</p>
                        </div>
                    </form>
                </div>
                <div class="card-footer black-card">
                    <div class="d-flex justify-content-center links">
                        <span class="wheat-item">Already have an account?&nbsp;</span><a href="/registration" class="card-link">
                            Log&nbsp;in!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('includes/footer.ejs') %>
    <script src ="/js/script.js"></script>
    <script src = "/js/registration.js"></script>
</body>

</html>