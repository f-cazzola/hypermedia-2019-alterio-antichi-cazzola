<%- include('includes/head.ejs') %>
<link rel="stylesheet" href="/css/login.css">
<title>Home Page</title>
</head>

<body>
    <%- include('includes/navbar.ejs') %>

    <nav class="crumb" aria-label="breadcrumb">
        <ol class="breadcrumb crumb">
            <li class="breadcrumb-item bc-active" aria-current="page">Home</li>
        </ol>
    </nav>

    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header black-card">
                    <h3><span class="wheat-item">Sign In</span></h3>
                </div>
                <div class="card-body grey-card">
                    <form>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input id="emailText" type="text" class="form-control" placeholder="username">
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input id="passText" type="password" class="form-control" placeholder="password">
                        </div>
                        <div class="form-group">
                            <input id="loginBtn" type="button" value="Login" class="btn float-right card-item">
                        </div>
                    </form>
                    <div class="form-group">
                        <p id="statusText" type="" value="dsadsa" class="text-warning"></p>
                    </div>
                </div>
                <div class="card-footer black-card">
                    <div class="d-flex justify-content-center links">
                        <span class="wheat-item">Don't have an account yet?</span>&nbsp;&nbsp;<a class="card-link"
                            href="/registration">Sign
                            Up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('includes/footer.ejs') %>
    <script src="/js/script.js"></script>
    <script src="/js/login.js"></script>
</body>

</html>